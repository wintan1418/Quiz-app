<h2>Your Quiz Score: <%= @submission.score.round(2) %></h2>
<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Question:</h5>
    <p class="card-text"><%= @quesition.content %></p>
    <% if @quesition.image.attached? %>
      <%= image_tag @quesition.image, class: "img-fluid mb-3" %>
    <% end %>
    <% selected_answer_id = @submission.selected_answer_id %>
    <% correct_answer = @quesition.correct_answer %>
    <% if selected_answer_id.present? %>
      <div class="alert <%= selected_answer_id == correct_answer ? 'alert-success' : 'alert-danger' %>">
        <% if selected_answer_id == correct_answer %>
          <strong>Selected Answer: </strong> <%= @quesition.send("answer#{selected_answer_id}") %>
        <% else %>
          <strong>Your incorrect answer: </strong> <%= @quesition.send("answer#{selected_answer_id}") %>
          <br>
          <strong>Correct answer: </strong> <span class="text-success"><%= @quesition.send("answer#{correct_answer}") %></span>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning">
        <strong>No answer submitted for this question.</strong>
      </div>
    <% end %>
    <%= link_to "Go to Quizo", quizo_path(@submission.quizo), class: "btn btn-primary" %>
  </div>
</div>
